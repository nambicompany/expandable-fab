<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/info_block"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="@dimen/ui_margin"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_large"
            android:text="@string/coordinator_layout_compatibility_fragment_info"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/snackbar_above_btn"
            android:layout_width="0dp"
            android:layout_height="90dp"
            app:layout_constraintTop_toBottomOf="@id/info_block"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:text="@string/clcf_snackbar_above_efab"
            android:textSize="@dimen/text_size_large"
            android:textColor="@android:color/white"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/snackbar_below_btn"
            android:layout_width="0dp"
            android:layout_height="90dp"
            app:layout_constraintTop_toBottomOf="@id/snackbar_above_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:text="@string/clcf_snackbar_below_efab"
            android:textSize="@dimen/text_size_large"
            android:textColor="@android:color/white"/>

        <com.nambimobile.widgets.efab.ExpandableFabLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <com.nambimobile.widgets.efab.ExpandableFab
                android:id="@+id/expandable_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="@dimen/ui_margin_medium"
                android:layout_marginEnd="@dimen/ui_margin_medium"
                android:layout_marginRight="@dimen/ui_margin_medium"/>
        </com.nambimobile.widgets.efab.ExpandableFabLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>