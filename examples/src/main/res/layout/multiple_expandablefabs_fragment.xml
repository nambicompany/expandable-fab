        <com.nambimobile.widgets.efab.ExpandableFab
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_marginTop="@dimen/ui_margin_medium"
            android:layout_marginEnd="@dimen/ui_margin_medium"
            android:layout_marginRight="@dimen/ui_margin_medium"
            app:efab_orientation="landscape"
            app:efab_fabOptionPosition="below"
            app:efab_color="@color/randomColor4"/>
        <com.nambimobile.widgets.efab.FabOption
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_orientation="landscape"
            app:fab_icon="@drawable/ic_location_white_24dp"
            app:fab_color="@color/randomColor4"
            app:label_text="Option 1"/>
    </com.nambimobile.widgets.efab.ExpandableFabLayout>


    <!-- Bottom-left ExpandableFab widget -->
    <com.nambimobile.widgets.efab.ExpandableFabLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.nambimobile.widgets.efab.ExpandableFab
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
