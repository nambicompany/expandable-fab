<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <TextView
            android:id="@+id/info_block"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/ui_margin"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_large"
            android:text="@string/multiple_expandablefabs_fragment_info"/>
    </ScrollView>

    <!-- Top-left ExpandableFab widget -->
    <com.nambimobile.widgets.efab.ExpandableFabLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.nambimobile.widgets.efab.ExpandableFab
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:layout_marginTop="@dimen/ui_margin_medium"
            android:layout_marginStart="@dimen/ui_margin_medium"
            android:layout_marginLeft="@dimen/ui_margin_medium"
            app:efab_orientation="portrait"
            app:efab_fabOptionPosition="below"
            app:efab_iconAnimationRotationDeg="135"/>
        <com.nambimobile.widgets.efab.FabOption
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_orientation="portrait"
            app:fab_icon="@drawable/ic_walk_white_24dp"
            app:label_text="Option 1"
            app:label_translationXPx="-100"
            app:label_position="right"/>
        <com.nambimobile.widgets.efab.FabOption
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_orientation="portrait"
            app:fab_icon="@drawable/ic_bike_white_24dp"
            app:label_text="Option 2"
            app:label_translationXPx="-100"
            app:label_position="right"/>
        <com.nambimobile.widgets.efab.FabOption
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_orientation="portrait"
            app:fab_icon="@drawable/ic_car_white_24dp"
            app:label_text="Option 3"
            app:label_translationXPx="-100"
            app:label_position="right"/>
        <com.nambimobile.widgets.efab.FabOption
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_orientation="portrait"
            app:fab_icon="@drawable/ic_train_white_24dp"
            app:label_text="Option 4"
            app:label_translationXPx="-100"
            app:label_position="right"/>
        <com.nambimobile.widgets.efab.FabOption
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_orientation="portrait"
            app:fab_icon="@drawable/ic_flight_white_24dp"
            app:label_text="Option 5"
            app:label_translationXPx="-100"
            app:label_position="right"/>

        <com.nambimobile.widgets.efab.ExpandableFab
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:layout_marginTop="@dimen/ui_margin_medium"
            android:layout_marginStart="@dimen/ui_margin_medium"
            android:layout_marginLeft="@dimen/ui_margin_medium"
            app:efab_orientation="landscape"
            app:efab_fabOptionPosition="below"
            app:efab_color="@color/randomColor2"
            app:efab_iconAnimationRotationDeg="135"/>
        <com.nambimobile.widgets.efab.FabOption
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_orientation="landscape"
            app:fab_icon="@drawable/ic_create_white_24dp"
            app:fab_color="@color/randomColor2"
            app:label_text="Option 1"
            app:label_translationXPx="-100"
            app:label_position="right"/>
    </com.nambimobile.widgets.efab.ExpandableFabLayout>


    <!-- Top-right ExpandableFab widget -->
